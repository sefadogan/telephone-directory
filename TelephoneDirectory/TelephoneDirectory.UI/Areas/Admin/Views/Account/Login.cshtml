
@using TelephoneDirectory.Model.ViewModel
@model VMAreaAccountLogin

@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <title>Admin Login - Telephone Directory</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" href="~/Areas/Admin/assets/global/images/favicon.png">
    <link href="~/Areas/Admin/assets/global/css/style.css" rel="stylesheet">
    <link href="~/Areas/Admin/assets/global/css/ui.css" rel="stylesheet">
    <link href="~/Areas/Admin/assets/global/plugins/bootstrap-loading/lada.min.css" rel="stylesheet">
</head>
<body class="account separate-inputs" data-page="login">
    <!-- BEGIN LOGIN BOX -->
    <div class="container" id="login-block">
        <div class="row">
            <div class="col-sm-6 col-md-4 col-md-offset-4">
                <div class="account-wall">
                    <i class="user-img icons-faces-users-03"></i>
                    @if (TempData["ProcessResult"] != null)
                    {
                        <div class="alert alert-@TempData["AlertType"]" role="alert">
                            @TempData["ProcessResult"].ToString()
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                    }
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-signin" }))
                    {
                        <div class="append-icon">
                            <input type="text" name="email" class="form-control form-white username" placeholder="Email" value="it.admin@mail.com" required>
                            <i class="icon-user"></i>
                            <div class="m-b-5">
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger m-b-5" })
                            </div>
                        </div>
                        <div class="append-icon m-b-20">
                            <input type="password" name="password" class="form-control form-white password" placeholder="Password" value="123123qwe" required>
                            <i class="icon-lock"></i>
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                        <button type="submit" id="submit-form" class="btn btn-lg btn-danger btn-block ladda-button" data-style="expand-left">Sign In</button>
                        <div class="clearfix">
                            <p class="pull-left m-t-20"><a id="password" href="#">Forgot password?</a></p>
                        </div>
                    }
                    <form class="form-password" role="form" action="#">
                        <div class="append-icon m-b-20">
                            <input type="text" name="email" id="email-send-password" class="form-control form-white username" placeholder="Email" required>
                            <i class="icon-lock"></i>
                        </div>
                        <button type="submit" id="submit-password" class="btn btn-lg btn-danger btn-block ladda-button" data-style="expand-left">Send Password</button>
                        <div class="clearfix">
                            <p class="pull-left m-t-20"><a id="login" href="#">Already user?</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <p class="account-copyright">
            <span>
                &copy; @DateTime.Now.Year - Telephone Directory | Coded by Sefa DOGAN.
            </span>
        </p>
    </div>
    <!-- END LOGIN BOX -->

    <script src="~/Areas/Admin/assets/global/plugins/jquery/jquery-3.1.0.min.js"></script>
    <script src="~/Areas/Admin/assets/global/plugins/jquery/jquery-migrate-3.0.0.min.js"></script>
    <script src="~/Areas/Admin/assets/global/plugins/gsap/main-gsap.min.js"></script>
    <script src="~/Areas/Admin/assets/global/plugins/tether/js/tether.min.js"></script>
    <script src="~/Areas/Admin/assets/global/plugins/bootstrap/js/bootstrap.min.js"></script>
    <script src="~/Areas/Admin/assets/global/plugins/bootstrap-loading/lada.min.js"></script>
    <script src="~/Areas/Admin/assets/global/plugins/jquery-validation/jquery.validate.min.js"></script>
    <script src="~/Areas/Admin/assets/global/plugins/jquery-validation/additional-methods.min.js"></script>
    <script src="~/Areas/Admin/assets/global/js/pages/login-v1.js"></script>
</body>
</html>
