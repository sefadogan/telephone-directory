
@{
    ViewBag.Title = "Change Password";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="header">
    <h2>Change Password</h2>
</div>
<div class="row">
    @if (TempData["ProcessResult"] != null)
    {
        <div class="alert alert-@TempData["AlertType"]" role="alert">
            @TempData["ProcessResult"].ToString()
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    <div class="col-lg-12">
        @using (Html.BeginForm("ChangePassword", "Employee", FormMethod.Post, new { @class = "form-signin" }))
        {
            <div class="row" style="margin-top:10px">
                <div class="col-xs-3">
                    <div class="form-group">
                        <label class="control-label">Current Password</label>
                        <div class="append-icon">
                            <input type="password" name="currentPassword" class="form-control" maxlength="18" autocomplete="off" autofocus />
                            <i class="icon-lock"></i>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">New Password</label>
                        <div class="append-icon">
                            <input type="password" name="newPassword" class="form-control" maxlength="18" autocomplete="off" />
                            <i class="icon-lock"></i>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label">New Password Again</label>
                        <div class="append-icon">
                            <input type="password" name="newPasswordVerify" class="form-control" maxlength="18" autocomplete="off" />
                            <i class="icon-lock"></i>
                        </div>
                    </div>
                    <span class="input-group-btn">
                        <button type="submit" class="btn btn-primary">Update</button>
                    </span>
                </div>
            </div>
        }
    </div>
</div>

