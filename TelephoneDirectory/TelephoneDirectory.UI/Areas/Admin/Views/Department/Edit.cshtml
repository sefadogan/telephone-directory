

@using TelephoneDirectory.Model.ViewModel
@model VMAreaDepartmentEdit

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div style="margin: 100px 50px;">
    <div class="header">
        <h1>Edit Employee</h1>
        <hr />
    </div>
    <div class="row">
        @if (TempData["ProcessResult"] != null)
        {
            <div class="alert alert-@TempData["AlertType"]" role="alert">
                @TempData["ProcessResult"].ToString()
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }
        <div class="col-lg-12">
            @using (Html.BeginForm("Edit", "Department", FormMethod.Post))
            {
                <div class="row" style="margin-top:10px">
                    <div class="col-xs-3">
                        <div class="form-group">
                            <label class="control-label">Department Name</label>
                            <div class="append-icon">
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control form-white" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Description</label>
                            <div class="append-icon">
                                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control form-white" } })
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Abridgment</label>
                            <div class="append-icon">
                                @Html.EditorFor(model => model.Abridgment, new { htmlAttributes = new { @class = "form-control form-white" } })
                            </div>
                        </div>
                        <span class="input-group-btn">
                            <button type="submit" class="btn btn-primary">Update</button>
                        </span>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

