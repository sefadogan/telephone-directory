
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@ViewBag.Title - Telephone Directory</title>

    <link rel="shortcut icon" href="~/images/favicon.png">
    <link href="https://fonts.googleapis.com/css?family=Montserrat:200,400,700" rel="stylesheet">

    <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->

    <style type="text/css">
        * {
            -webkit-box-sizing: border-box;
            box-sizing: border-box;
        }

        body {
            padding: 0;
            margin: 0;
        }

        #error-page {
            position: relative;
            height: 100vh;
        }

            #error-page .error-page {
                position: absolute;
                left: 50%;
                top: 50%;
                -webkit-transform: translate(-50%, -50%);
                -ms-transform: translate(-50%, -50%);
                transform: translate(-50%, -50%);
            }

        .error-page {
            max-width: 520px;
            width: 100%;
            line-height: 1.4;
            text-align: center;
        }

            .error-page .error-page-type {
                position: relative;
                height: 200px;
                margin: 0px auto 20px;
                z-index: -1;
            }

                .error-page .error-page-type h1 {
                    font-family: 'Montserrat', sans-serif;
                    font-size: 236px;
                    font-weight: 200;
                    margin: 0px;
                    color: #211b19;
                    text-transform: uppercase;
                    position: absolute;
                    left: 50%;
                    top: 50%;
                    -webkit-transform: translate(-50%, -50%);
                    -ms-transform: translate(-50%, -50%);
                    transform: translate(-50%, -50%);
                }

                .error-page .error-page-type h2 {
                    font-family: 'Montserrat', sans-serif;
                    font-size: 28px;
                    font-weight: 400;
                    text-transform: uppercase;
                    color: #211b19;
                    background: #fff;
                    padding: 10px 5px;
                    margin: auto;
                    display: inline-block;
                    position: absolute;
                    bottom: 0px;
                    left: 0;
                    right: 0;
                }

            .error-page a {
                font-family: 'Montserrat', sans-serif;
                display: inline-block;
                font-weight: 700;
                text-decoration: none;
                color: #fff;
                text-transform: uppercase;
                padding: 13px 23px;
                background: #1abc9c;
                font-size: 18px;
                -webkit-transition: 0.2s all;
                transition: 0.2s all;
                border-radius: 4px;
            }

                .error-page a:hover {
                    color: white;
                    background: #211b19;
                }

        @@media only screen and (max-width: 767px) {
            .error-page .error-page-type h1 {
                font-size: 148px;
            }
        }

        @@media only screen and (max-width: 480px) {
            .error-page .error-page-type {
                height: 148px;
                margin: 0px auto 10px;
            }

                .error-page .error-page-type h1 {
                    font-size: 86px;
                }

                .error-page .error-page-type h2 {
                    font-size: 16px;
                }

            .error-page a {
                padding: 7px 15px;
                font-size: 14px;
            }
        }
    </style>
</head>
<body>
    <div id="error-page">
        @RenderBody();
    </div>
</body>
</html>