
@using TelephoneDirectory.Model.ViewModel
@model List<VMEmployee>

@{
    ViewBag.Title = MultiLanguage.Resource.EPLST_LIST;
}

<h2>Employees</h2>

@if (TempData["ProcessResult"] != null)
{
    <div class="alert alert-@TempData["AlertType"]" role="alert">
        @TempData["ProcessResult"].ToString()
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<table class="table table-hover">
    <thead>
        <tr>
            <th class="col-md-1">#</th>
            <th class="col-md-3">@MultiLanguage.Resource.EPLST_FIRST_NAME</th>
            <th class="col-md-4">@MultiLanguage.Resource.EPLST_LAST_NAME</th>
            <th class="col-md-3">@MultiLanguage.Resource.EPLST_TELEPHONE</th>
            <th class="col-md-1"></th>
        </tr>
    </thead>
    <tbody>
        @{
            var line = 1;
            foreach (var employee in Model)
            {
                <tr>
                    <td class="col-md-1">
                        @line
                    </td>
                    <td>@employee.FirstName</td>
                    <td>@employee.LastName</td>
                    <td>
                        @employee.Telephone
                    </td>
                    <td style="text-align:right;">
                        <a class="btn btn-info btn-sm" href="/Employee/Detail/@employee.EmployeeId"><i class="glyphicon glyphicon-eye-open"></i></a>
                    </td>
                </tr>
                line++;
            }
        }
    </tbody>
</table>

